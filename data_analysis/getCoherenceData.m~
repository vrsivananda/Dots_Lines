function coherenceData = getCoherenceData(sa, coherenceData)
    
    for trialType = {'actual_RDK', 'actual_Lines'}
        
        % Get the indices of the relevant stimuli
        indices = returnIndicesIntersect(sa.trialType, trialType{1});
        
        % Get the coherences and store them in the relevant array
        if(strcmp(trialType, 'actual_RDK'))
            stimuli = 'Dots';
        elseif(strcmp(trialType, 'actual_Lines'))
            stimuli = 'Lines';
        end
        
        coherenceData.(stimuli).T  = sa.coh_T(indices);
        coherenceData.(stimuli).NT = sa.coh_NT(indices);
        coherenceData.(stimuli).D  = sa.coh_D(indices);
        
        
    end
    
    
end